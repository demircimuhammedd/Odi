<style type="text/css">
/*Loading panel css*/
    .loading{
        position:absolute;
        left:48%;
        top:48%;
        display:block;
        padding:5px;
        background-color:yellow;
        color:red;
        border:1px solid;
        margin:0 auto;
    }
</style>
<div id="wrapper">
    <div class="container">
        <div class="row">
            <div class="grid" id="post-list">
                <div class="grid-sizer"></div>
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 grid-item">
                    <div class="leftSidebar">
                        <div id="sideNav">
                            <div class="userNav" ng-controller="userCtrl">
                                <div class="user_Cover cover-container" ng-style="{'background-image': 'url({{ userData.KapakResmiUrl || 'assets/img/cover.jpeg' }})'}" data-clickable="true">
                                </div>
                                <div class="user_Profile">
                                    <div class="avatar" ng-style="{'background-image': 'url({{ userData.ResimUrl || 'assets/img/default_user.jpg' }})'}">
                                        
                                    </div>
                                    <div class="user-info">
                                        <div class="user-name"><a href="@Url.Action("Index","Profile")" title="{{userData.Ad}} {{userData.Soyad}}">{{userData.Ad}} {{userData.Soyad}}</a></div>
                                        <small class="user-subtitle">At least we are happy in the dreams room is enough.</small>
                                    </div>
                                </div>
                                <div class="user_Destination">
                                    <div class="user_Follow">
                                        <b>905</b>
                                        <h4>Takipçi</h4>
                                    </div>
                                    <div class="user_Follow">
                                        <b>99</b>
                                        <h4>Takip Edilen</h4>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <div class="left_nav_section">

                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
                <form class="col-md-8 col-sm-8 col-lg-8 col-xs-12 grid-item" action="#formgonder" method="get" accept-charset="utf-8" id="post_form">
                    <textarea name="" id="" cols="58" rows="2" placeholder="Bir şeyler yazın..."></textarea>
                    <div class="files_upload">
                        <div class="image-upload-wrap">
                            <input class="file-upload-input" type='file' onchange="readURL(this);" accept="image/*" /> 
                        </div>
                        <div class="file-upload-content">
                            <div class="file-upload-content-in">
                                <img class="file-upload-image" src="#" alt="your image" />
                                <div class="image-title-wrap">
                                    <button type="button" onclick="removeUpload()" class="remove-image"><i class="fa fa-close"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="tools">
                        <ul>
                            <li><span onclick="$('.file-upload-input').trigger( 'click' )"><i class="fa fa-camera"></i></span></li>
                        </ul>
                        <button>Paylaş</button>
                        <div class="clearfix"></div>

                    </div>
                </form>
                <script>
                    /*
                    var app = angular.module("odi", ['infinite-scroll']);
                    
                    app.controller('odiCtrl', function ($scope, $http) {

                        $scope.loadMore = function () {
                            $http.get("Home/GetMedia").then(function (response) {
                                $scope.veriler = response.data;
                            });
                        };

                    });
                    */
                </script>
                <div ng-controller="HomePostListCtrl">
                    <div style="position:relative">
                        <span ng-show="IsLoading" class="loading">Loading...</span>
                        <div infinityscroll="NextPage()" style="/* height:400px; overflow:auto; */">
                                
                            <div class="home-page-post">
                                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 grid-item" ng-repeat="veri in veriler">
                                    <div class="item-box">
                                        <div class="post-category">{{veri.KategoriAdi}}</div>
                                        <article class="post">
                                            <div class="post_header">
                                                <img ng-src="{{ veri.GonderenResmi || 'assets/img/default_user.jpg' }}" alt="" />
                                                <div class="author-date">
                                                    <a class="h4 post__author-name fn" href="profile.html">{{veri.GonderenIsmi}}</a>
                                                    <div class="post__date"> <time class="published" datetime="2004-07-24T18:18"> March 4 at 2:05pm </time> </div>
                                                </div>
                                                <div class="more-settings">
                                                    <a href="" title="" class="dropdown-toggle bg clear" data-toggle="dropdown"> <i class="flaticon-more-1"></i> </a>
                                                    <ul class="dropdown-menu">
                                                        <li> <a href="#">Gönderiyi Düzenle</a> </li>
                                                        <li> <a href="#">Gönderiyi Sil</a> </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="post_main">
                                                <p>Hey <a href="#">Cindi</a>, you should really check out this new song by Iron Maid. The next time they come to the city we should totally go!</p>
                                                <div class="post-thumb" ng-if="veri.ResimUrl">
                                                    <img data-ng-src="{{veri.ResimUrl}}" alt="" />
                                                </div>
                                            </div>
                                            <div class="post_footer">
                                                <div class="post-additional-info inline-items">
                                                    <div class="post-additional-number"> <span><mark>49</mark> Beğeni</span> <span><mark>264</mark> Yorum</span> </div>
                                                    <div class="post-additional-button">
                                                        <button><i class="flaticon-like"></i>  </button> <button><i class="flaticon-chat-1"></i> </button>
                                                        <div class="comments-shared"> </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div><!-- .row -->
    </div><!-- .container -->
</div><!-- #wrapper -->